<?xml version="1.0" encoding="utf-8"?>
<mx:Panel
    xmlns:mx="http://www.adobe.com/2006/mxml"
    title="Employee Management"
    width="100%" height="100%"
    layout="horizontal"
    backgroundAlpha="1"
    borderAlpha="1"
    >
    <mx:states>
        <mx:State name="newState">
            <mx:SetProperty target="{empListPanel}" name="enabled" value="false"/>
            <mx:SetProperty target="{register}" name="label" value="追加"/>
            <mx:SetProperty target="{remove}" name="label" value="キャンセル"/>
            <mx:SetProperty target="{info}" name="title" value="Employee New Form"/>
        </mx:State>
    </mx:states>
    <mx:Panel width="100%" height="100%" id="empListPanel" title="Employee List">
        <mx:HBox width="100%" horizontalAlign="right">
            <mx:TextInput id="searchWord"/>
            <mx:Button id="search" label="検索"/>
        </mx:HBox>
        <mx:DataGrid id="empList" height="100%" width="100%">
            <mx:columns>
            	<mx:DataGridColumn dataField="id" headerText="id" width="35"/>
            	<mx:DataGridColumn dataField="empNo" headerText="empNo" width="80"/>
            	<mx:DataGridColumn dataField="empName" headerText="empName" />
        	    <mx:DataGridColumn dataField="password" headerText="password" width="150"/>
            </mx:columns>
        </mx:DataGrid>
        <mx:ControlBar id="empListControl" horizontalAlign="right" width="100%">
            <mx:Button id="clear" label="クリア"/>
            <mx:Button id="refresh" label="最新の情報に更新"/>
            <mx:Spacer width="100%"/>
            <mx:Button id="add" label="新規作成"/>
        </mx:ControlBar>        
    </mx:Panel>
    <mx:Panel width="100%" height="100%" id="info" title="Employee Info" data="{empList.selectedItem}">
        <mx:HBox width="100%">
            <mx:Label width="20%" text="id"/>            
            <mx:Label id="empId" width="80%" text="{info.data.id}"/>
        </mx:HBox>
        <mx:HBox width="100%">
            <mx:Label width="20%" text="empNo"/>            
            <mx:TextInput id="empNo" width="80%" text="{info.data.empNo}"/>
        </mx:HBox>
        <mx:HBox width="100%">
            <mx:Label width="20%" text="password"/>            
            <mx:TextInput id="password" width="80%" text="{info.data.password}"/>
        </mx:HBox>
        <mx:HBox width="100%">
            <mx:Label width="20%" text="empName"/>            
            <mx:TextInput id="empName" width="80%" text="{info.data.empName}"/>
        </mx:HBox>
        <mx:HBox width="100%">
            <mx:Label width="20%" text="mgrId"/>            
            <mx:TextInput id="mgrId" width="80%" text="{info.data.mgrId}"/>
        </mx:HBox>
        <mx:HBox width="100%">
            <mx:Label width="20%" text="hiredate"/>    
            <mx:DateField id="hiredate" data="{info.data.hiredate}"/>
        </mx:HBox>
        <mx:HBox width="100%">
            <mx:Label width="20%" text="sal"/>            
            <mx:TextInput id="sal" width="80%" text="{info.data.sal}"/>
        </mx:HBox>
        <mx:HBox width="100%">
            <mx:Label width="20%" text="deptId"/>            
            <mx:TextInput id="deptId" width="80%" text="{info.data.deptId}"/>
        </mx:HBox>
        <mx:HBox width="100%">
            <mx:Label width="20%" text="versionNo"/>            
            <mx:Label id="versionNo" width="80%" text="{info.data.versionNo}"/>
        </mx:HBox>
        <mx:ControlBar horizontalAlign="right" width="100%">
            <mx:Button id="remove" label="削除"/>
            <mx:Spacer width="100%"/>
            <mx:Button id="register" label="更新"/>
        </mx:ControlBar>    
    </mx:Panel>

</mx:Panel>