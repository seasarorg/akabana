<?xml version="1.0" encoding="utf-8"?>
<project name="yui-frameworks-fx4-fc-air-fp10" basedir="." default="all">

    <target name="all">
        <property name="projectdir" value="${PROJECT_WORKSPACE}${file.separator}${ant.project.name}"/>
        <projectInit projectname="${ant.project.name}" projectdir="${projectdir}"/>
        <projectAddSubProject projectdir="${projectdir}" subprojectdir="..${file.separator}yui-core"/>
        <projectAddSubProject projectdir="${projectdir}" subprojectdir="..${file.separator}yui-logging"/>
        <projectAddSubProject projectdir="${projectdir}" subprojectdir="..${file.separator}yui-framework"/>
        <projectAddSubProject projectdir="${projectdir}" subprojectdir="..${file.separator}yui-framework-bridge-flex4" defaultsCss="defaults-catalyst.css"/>
        <projectAddSubProject projectdir="${projectdir}" subprojectdir="..${file.separator}yui-air-flex4"/>

        <projectCompilePrepare projectdir="${projectdir}"/>
        <projectCompileWithAIRFlexLibrary projectname="${ant.project.name}" projectdir="${projectdir}" flashplayer="10.1"/>
        <projectRsl projectname="${ant.project.name}" projectdir="${projectdir}" flashplayer="10.1"/>
    </target>
</project>
